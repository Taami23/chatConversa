<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2A2A2B"
    tools:context=".Activities.PhotoActivity">

    <ImageButton
        android:id="@+id/atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@drawable/back_white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/user"
        android:id="@+id/contenedorImagen"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/md_white_1000"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <Button
        android:id="@+id/tomarFoto"
        android:layout_margin="15dp"
        android:text="Tomar Foto"
        android:layout_width="match_parent"
        android:layout_height="65dp"></Button>

    <Button
        android:id="@+id/subirFoto"
        android:layout_margin="15dp"
        android:text="Subir Foto"
        android:layout_width="match_parent"
        android:layout_height="65dp"></Button>

</LinearLayout>

