<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_purple_500_25</item>
        <item name="colorPrimaryDark">@color/md_amber_600</item>
        <item name="colorAccent">@color/md_blue_grey_800</item>
        <item name="android:statusBarColor">@color/ic_launcher_background</item>
        <item name="android:colorBackground">@color/md_cyan_900</item>
        <item name="android:textColor">@color/md_deep_orange_500</item>
        <item name="textAppearanceButton">@style/AppTheme.Button</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/md_green_A700</item>
        <item name="android:textColor">@color/md_teal_300</item>
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearanceButton</item>
    </style>

    <style name="AppShapeAppearanceButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>
